generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clientes {
  id                String      @id @default(uuid())
  username          String      @unique
  nome              String
  email             String      @unique
  cpf               String      @unique
  senha             String
  situacao          Situacao
  motivoBloqueio    String?
  cep               String
  logradouro        String
  numero            Int
  complemento       String?
  bairro            String
  cidade            String
  estado            String
  dataNascimento    String
  dataCadastro      DateTime    @default(now())
  telefone          String
  tipoUsuario       TipoUsuario
  quantidadePedidos Int? //mudar depois
  photoUrl          String      @default("https://cdn-icons-png.flaticon.com/512/74/74472.png")
  lastOnline        DateTime?   @default(now())
  lastLogin         DateTime?
  pedidos           Pedidos[]
  chats             Chats[]
  favoriteUzers     Uzers[]
}

model Uzers {
  id                          String      @id @default(uuid())
  username                    String      @unique
  nome                        String
  email                       String      @unique
  cpf                         String      @unique
  senha                       String
  situacao                    Situacao
  motivoBloqueio              String?
  cep                         String
  logradouro                  String
  numero                      Int
  complemento                 String?
  bairro                      String
  cidade                      String
  estado                      String
  dataNascimento              String
  dataCadastro                DateTime    @default(now())
  telefone                    String
  tipoUsuario                 TipoUsuario
  quantidadePedidos           Int?
  photoUrl                    String      @default("https://cdn-icons-png.flaticon.com/512/74/74472.png")
  quantidadePedidosRealizados Int?
  servico                     Servicos    @relation(fields: [idServico], references: [id])
  idServico                   String
  avaliacao                   Float       @default(0.0)
  avaliacoes                  Float[]     @default([])
  lastOnline                  DateTime?   @default(now())
  lastLogin                   DateTime?
  Pedidos                     Pedidos[]
  bannerUrl                   String?     @default("https://uezcompanys3.s3.us-east-2.amazonaws.com/defaultbanner.jpg")
  bio                         String?     @default("Uzer criado na UezCompany, somente um Uzer pode edita-lo.")
  chats                       Chats[]
  cliente                     Clientes?   @relation(fields: [idCliente], references: [id])
  idCliente                   String?
}

model Servicos {
  id               String      @id @default(uuid())
  nome             String      @unique
  tipo             TipoServico
  categoria        Categorias  @relation(fields: [idCategoria], references: [id])
  descricao        String      @default("Servi√ßo oferecido pela UezCompany")
  quantidadeFeitos Int         @default(0)
  taxaPadrao       Float       @default(5.0)
  Pedidos          Pedidos[]
  Uzers            Uzers[]
  idCategoria      String
}

model Categorias {
  id       String     @id @default(uuid())
  nome     String     @unique
  Servicos Servicos[]
}

model Pedidos {
  id              String      @id @default(uuid())
  tipo            TipoServico
  servico         Servicos    @relation(fields: [idServico], references: [id])
  titulo          String
  descricao       String      @default("Pedido criado na UezCompany, somente um Uzer pode finaliza-lo.")
  status          String      @default("A REALIZAR")
  uzer            Uzers?      @relation(fields: [idUzer], references: [id])
  idServico       String
  idUzer          String?
  disponivel      Boolean     @default(true)
  dataCriacao     DateTime    @default(now())
  dataFinalizacao DateTime?
  valor           Float       @default(0.0)
  images          String[]
  avaliacao       Float       @default(0.0)
  avaliado        Boolean     @default(false)
  cliente         Clientes    @relation(fields: [idCliente], references: [id])
  idCliente       String
  Portfolio       Portfolio[]
  Messages        Messages[]
}

model Portfolio {
  id       String  @id @default(uuid())
  pedido   Pedidos @relation(fields: [idPedido], references: [id])
  idPedido String
}

model Notificacoes {
  id         String   @id @default(uuid())
  type       String
  content    String
  createdAt  DateTime @default(now())
  readed     Boolean  @default(false)
  receiverId String
}

model Chats {
  id        String     @id @default(uuid())
  cliente   Clientes   @relation(fields: [idCliente], references: [id])
  uzer      Uzers      @relation(fields: [idUzer], references: [id])
  idCliente String
  idUzer    String
  messages  Messages[]
  createdAt DateTime   @default(now())
}

model Messages {
  id         String       @id @default(uuid())
  type       TipoMensagem @default(TEXT)
  content    String
  createdAt  DateTime     @default(now())
  readed     Boolean      @default(false)
  senderId   String
  receiverId String
  Chat       Chats        @relation(fields: [idChat], references: [id])
  idChat     String
  pedido     Pedidos?     @relation(fields: [idPedido], references: [id])
  idPedido   String?
}

enum TipoServico {
  ONLINE
  PRESENCIAL
  AMBOS
}

enum Situacao {
  ATIVO
  INATIVO
  BLOQUEADO
}

enum TipoUsuario {
  UZER
  CLIENTE
}

enum TipoMensagem {
  TEXT
  BUDGET
  IMAGE
  FILE
}
